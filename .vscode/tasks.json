{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Abella",
            "type": "shell",
            "command": "abella -f subgoals=off ${file}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "clear": true,
                "showReuseMessage": false
            }
        }
    ]
}